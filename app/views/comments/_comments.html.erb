<h2>Comments</h2>

<!-- List of comments -->
<div id="<%= dom_id(post, :comments) %>">
	<%= render post.comments %>
	<!-- New comments will be appended here via Turbo Stream -->
	<%= turbo_frame_tag dom_id(post, :comments_tail) %>
	<!-- Tail frame helps when appending streams to maintain focus/scroll if needed -->
  
</div>

<!-- New comment form (separate from the list) -->
<div id="<%= dom_id(post, :new_comment) %>" style="margin-top:0.75rem;">
	<%= render "comments/new", post: post %>
  
</div>
